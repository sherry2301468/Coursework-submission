#include <iostream>
using namespace std;

void restrictedHanoi(int n, char from, char to, char aux) {
    if (n == 0)
        return;

    if ((from == 'A' && to == 'C') || (from == 'C' && to == 'A')) {
        restrictedHanoi(n - 1, from, to, aux); // move smaller disks recursively
        cout << "Move disk " << n << " from " << from << " to " << aux << endl;
        restrictedHanoi(n - 1, to, from, aux);
        cout << "Move disk " << n << " from " << aux << " to " << to << endl;
        restrictedHanoi(n - 1, from, to, aux);
    }
    else {
        restrictedHanoi(n - 1, from, aux, to);
        cout << "Move disk " << n << " from " << from << " to " << to << endl;
        restrictedHanoi(n - 1, aux, to, from);
    }
}

int main() {
    int n;
    cout << "Enter number of disks: ";
    cin >> n;

    cout << "\nMoves:\n";
    restrictedHanoi(n, 'A', 'C', 'B');

    return 0;
}
